<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="683dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="387dp"
            android:layout_height="111dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTituloInicioSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicio de Sesión"
                android:textAlignment="center"
                android:textSize="50dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="297dp"
            android:layout_height="166dp"
            android:contentDescription="TODO"
            android:padding="15dp"
            app:srcCompat="@drawable/iconousuario"
            tools:srcCompat="@drawable/iconousuario" />

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="59dp"
            android:background="#159FAC"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEmailLogin"
                android:layout_width="61dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Email"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEmailLogin"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="59dp"
            android:background="#159FAC"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvClaveLogin"
                android:layout_width="61dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Clave"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etClaveLogin"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="68dp"
            android:background="#159FAC"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLogin"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión" />

            <ImageView
                android:id="@+id/ivLoginGoogle"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="102dp"
            android:background="#159FAC"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRegistroP"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:text="¿No te has registrado todavía?"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRegistro"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Registrarse" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>